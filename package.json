{
  "name": "saas-monorepo",
  "private": true,
  "scripts": {
    "build": "pnpm --filter \"./apps/*\" build",
    "dev": "pnpm --filter \"./apps/*\" --parallel dev",
    "lint": "pnpm --filter \"./apps/*\" lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "prettier": "^3.0.0",
    "typescript": "^5.0.0"
  },
  "packageManager": "pnpm@8.0.0"
}
